#!/bin/bash

echo "Loading OK Lib Magento"

mkdir -p /var/www/html/app/code/Okitcom/OkLibMagento
cp -r /var/www/oklib/. /var/www/html/app/code/Okitcom/OkLibMagento/

echo "Installing module"

/usr/local/bin/php /var/www/html/bin/magento setup:upgrade
/usr/local/bin/php /var/www/html/bin/magento setup:di:compile

echo "Finished installing OK Lib Magento"
